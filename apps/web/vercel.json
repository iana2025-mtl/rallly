{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "pnpm install",
  "buildCommand": "cd ../.. && SKIP_ENV_VALIDATION=1 pnpm db:generate && SKIP_ENV_VALIDATION=1 pnpm build:web",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/house-keeping/delete-inactive-polls",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/house-keeping/remove-deleted-polls",
      "schedule": "30 6 * * *"
    }
  ]
}
